<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Recommend Recipe Label -->

    <!-- Button for recipe -->
    <TextView
        android:id="@+id/recommend_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommend Recipe"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/recipe_button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Roast Beef With Pineapple"
        android:backgroundTint="@color/place_btn3"
        android:textColor="@android:color/black"
        app:cornerRadius="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/recommend_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button for other clickable item 1 -->
    <Button
        android:id="@+id/recipe_button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="XXXXX"
        android:backgroundTint="@color/platform_grey"
        android:textColor="@android:color/black"
        app:cornerRadius="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/recipe_button1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button for other clickable item 2 -->
    <Button
        android:id="@+id/item_button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="XXXXX"
        android:backgroundTint="@color/platform_grey"
        android:textColor="@android:color/black"
        app:cornerRadius="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/recipe_button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button for other clickable item 3 -->
    <Button
        android:id="@+id/item_button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="XXXXX"
        android:backgroundTint="@color/platform_grey"
        android:textColor="@android:color/black"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@id/item_button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/select_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/platform_grey"
        android:text="SELECT"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

