<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".StepCompletedActivity">

    <!-- Title: Step Completed -->
    <TextView
        android:id="@+id/timerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timer"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- ImageView for Background Image -->
    <ImageView
        android:id="@+id/timerImage"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:src="@drawable/noodle_image"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/timerTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- FrameLayout for Gray Circle and Step Completed Text -->
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="-150dp"
        app:layout_constraintTop_toBottomOf="@id/timerImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/circle_background">

    <!-- Step Completed Text -->
    <TextView
        android:id="@+id/stepCompletedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step Completed"
        android:textSize="36sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_gravity="center"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>